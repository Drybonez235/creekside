---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro'
import Layout from '../layouts/Layout.astro';
import Scheduleconsultatioin from '../components/Schedule-consultation.astro'

import '../styles/global.css';
const teamMembers = [
  {
    firstName: "Peterson",
    lastName: "Rainey",
    image: "peterson-rainey-headshot.png",
    role: "Co-owner & Founder",
    bio: "Co-owner of Creekside Marketing and a mechanical engineer by training, Peterson focuses on Google Ads strategy and performance. His technical mindset and data-first approach drive consistent, measurable growth for clients."
  },
  {
    firstName: "Cade",
    lastName: "Maclean",
    image: "cade-maclean-headshot.jpg",
    role: "Co-Owner & Manager",
    bio: "Co-owner of Creekside Marketing with a background in accounting and an MBA, Cade specializes in data-driven Facebook advertising. He brings analytical precision and strategic optimization to help businesses scale profitably."
  },
  {
    firstName: "Steve",
    lastName: "Stone",
    image: "steve-stone-headshot.jpeg",
    role: "Digital Marketing Consultant",
    bio: "" // No bio provided in original HTML
  },
  {
    firstName: "Sophia",
    lastName: "Rainey",
    image: "sophia-rainey-headshot.jpg",
    role: "Creatives Director",
    bio: "" // No bio provided in original HTML
  }
];

---

<Layout
	title="Creekside marketing pros" 
  description="Grow your buiness by 100%"
>
	<Nav />

<section class="bg-white py-16 lg:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    
    <header class="mb-16 text-center">
      <h2 class="text-primary-900 text-3xl font-extrabold uppercase tracking-tight sm:text-4xl lg:text-5xl">
        Meet Our Team
      </h2>
      <div class="bg-secondary-500 mx-auto mt-4 h-1.5 w-20 rounded-full"></div>
    </header>

    <div class="grid gap-y-16 gap-x-12 md:grid-cols-2">
      {teamMembers.map((member) => (
        <div class="flex flex-col items-center text-center sm:items-start sm:text-left mx-auto">
          <h3 class="text-primary-900 text-2xl font-black uppercase tracking-tighter lg:text-3xl">
            {member.firstName} <span class="text-secondary-500">{member.lastName}</span>
          </h3>

          <div class="my-6 shrink-0">
            <img 
              src={member.image} 
              alt={`${member.firstName} ${member.lastName}`}
              class="size-64 rounded-full object-cover shadow-sm"
              loading="lazy"
            />
          </div>

          <div class="flex flex-col gap-3">
            <h4 class="text-primary-800 text-lg font-bold uppercase tracking-wide">
              {member.role}
            </h4>
            {member.bio && (
              <p class="text-grey-700 max-w-md text-base/7">
                {member.bio}
              </p>
            )}
          </div>
        </div>
      ))}
    </div>

  </div>
</section>
    <Scheduleconsultatioin />
    <Footer>
</Layout>