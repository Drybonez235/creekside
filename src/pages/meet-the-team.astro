    firstName: "Melvin",
    lastName: "",
    image: "/melvin-headshot.jpeg",
    role: "Executive Assistant",
    bio: "" 
  },
];

// Grouping Logic
const leadership = teamMembers.slice(0, 3);
const googleTeam = teamMembers.filter(m => m.role.includes("Google Ads"));
const metaTeam = teamMembers.filter(m => m.role.includes("Meta Ads"));
const supportTeam = teamMembers.filter(m => 
  !leadership.includes(m) && 
  !googleTeam.includes(m) && 
  !metaTeam.includes(m)
);

// Helper to center the 3rd item in a 2-column grid if the total is odd
const getGridItemClass = (index, length) => {
  const isLast = index === length - 1;
  const isOddTotal = length % 2 !== 0;
  return isLast && isOddTotal ? "md:col-span-2" : "";
};
---

<Layout
  title="Creekside Marketing Pros" 
  description="Grow your business by 100%"
>
  <Nav />

  <section class="bg-white py-16 lg:py-24">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
      
      <header class="mb-20 text-center">
        <h2 class="text-primary-900 text-3xl font-extrabold uppercase tracking-tight sm:text-4xl lg:text-5xl">
          Meet Our Team
        </h2>
        <div class="bg-secondary-500 mx-auto mt-4 h-1.5 w-20 rounded-full"></div>
      </header>

      <div class="grid grid-cols-1 gap-x-12 gap-y-20 md:grid-cols-2">
        {leadership.map((member, index) => (
          <div class={`flex flex-col items-center text-center ${getGridItemClass(index, leadership.length)}`}>
            <h3 class="text-primary-900 text-2xl font-black uppercase tracking-tighter lg:text-3xl">
              {member.firstName} <span class="text-secondary-500">{member.lastName}</span>
            </h3>
            <div class="my-6 shrink-0">
              <img 
                src={member.image} 
                alt={`${member.firstName} ${member.lastName}`}
                class="size-64 rounded-full object-cover shadow-sm"
                loading="lazy"
              />
            </div>
            <div class="flex flex-col gap-3 max-w-md">
              <h4 class="text-primary-800 text-lg font-bold uppercase tracking-wide">
                {member.role}
              </h4>
              {member.bio && (
                <p class="text-grey-700 text-base/7">
                  {member.bio}
                </p>
              )}
            </div>
          </div>
        ))}
      </div>

      <hr class="border-grey-200 my-24" />

      <div class="mb-16 text-center">
        <h2 class="text-primary-900 mb-4 text-5xl font-extrabold uppercase tracking-tight">Our <span class="text-secondary-500">Google Ads</span> Team</h2>
        <div class="bg-secondary-500 mx-auto h-1 w-12 rounded-full"></div>
      </div>
      <div class="grid grid-cols-1 gap-x-12 gap-y-16 md:grid-cols-2">
        {googleTeam.map((member, index) => (
          <div class={`flex flex-col items-center text-center ${getGridItemClass(index, googleTeam.length)}`}>
            <h3 class="text-secondary-500 text-xl font-bold uppercase mb-2">{member.firstName}</h3>
             <img 
                src={member.image} 
                alt={member.firstName}
                class="size-48 mb-6 rounded-full object-cover shadow-sm"
              />
            <p class="text-primary-900 font-semibold uppercase tracking-wider">{member.role}</p>
          </div>
        ))}
      </div>

      <hr class="border-grey-200 my-24" />

      <div class="mb-16 text-center">
        <h2 class="text-primary-900 mb-4 text-5xl font-extrabold uppercase tracking-tight">Our <span class="text-secondary-500">Meta Ads</span> Team</h2>
        <div class="bg-secondary-500 mx-auto h-1 w-12 rounded-full"></div>
      </div>
      <div class="grid grid-cols-1 gap-x-12 gap-y-16 md:grid-cols-2">
        {metaTeam.map((member, index) => (
          <div class={`flex flex-col items-center text-center ${getGridItemClass(index, metaTeam.length)}`}>
            <h3 class="text-secondary-500 text-xl font-bold uppercase mb-2">{member.firstName}</h3>
             <img 
                src={member.image} 
                alt={member.firstName}
                class="size-48 mb-6 rounded-full object-cover shadow-sm"
              />
            <p class="text-primary-900 font-semibold uppercase tracking-wider">{member.role}</p>
          </div>
        ))}
      </div>

      <hr class="border-grey-200 my-24" />

      <div class="mb-16 text-center">
        <h2 class="text-primary-900 mb-4 text-5xl font-extrabold uppercase tracking-tight">Supporting Your <span class="text-secondary-500">Success</span></h2>
        <div class="bg-secondary-500 mx-auto h-1 w-12 rounded-full"></div>
      </div>
      <div class="grid grid-cols-1 gap-x-12 gap-y-16 md:grid-cols-2">
        {supportTeam.map((member, index) => (
          <div class={`flex flex-col items-center text-center ${getGridItemClass(index, supportTeam.length)}`}>
            <h3 class=" text-secondary-500 text-xl font-bold uppercase mb-2">{member.firstName} {member.lastName}</h3>
             <img 
                src={member.image} 
                alt={member.firstName}
                class="size-48 mb-6 rounded-full object-cover shadow-sm"
              />
            
            <p class="text-primary-900 dont-semibold uppercase tracking-wider">{member.role}</p>
          </div>
        ))}
      </div>

    </div>
  </section>

  <Scheduleconsultatioin />
  <Footer />
</Layout>