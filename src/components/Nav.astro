<header class=" top-0 z-50 w-full border-b border-grey-200 bg-white shadow-sm">
  <div class="container mx-auto flex items-center justify-between px-4 py-4 lg:px-8">
    
    <div class="shrink-0">
      <a href="/" class="block">
        <img 
          src="creekside-marketing-pros-logo.webp" 
          alt="Creekside marketing logo" 
          class="h-12 w-auto lg:h-16 transition-transform duration-300 transform hover:scale-110"
        />
      </a>
    </div>

    <nav class="hidden items-center gap-8 lg:flex" aria-label="Main Menu">
      <div class="group relative">
        <button class="flex items-center gap-1 text-base/6 font-medium text-primary-900 transition-colors hover:text-secondary-500">
          Services
          <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
        </button>
        <div class="invisible absolute top-full left-0 w-48 z-50 translate-y-2 rounded-sm border border-grey-100 bg-white p-2 shadow-sm opacity-0 transition-all group-hover:visible group-hover:translate-y-0 group-hover:opacity-100">
          <a href="/google-ads.html" class="block rounded-xs px-4 py-2 text-sm/6 text-grey-700 hover:bg-grey-50 hover:text-secondary-600">Google Ads (PPC)</a>
          <a href="/meta-ads.html" class="block rounded-xs px-4 py-2 text-sm/6 text-grey-700 hover:bg-grey-50 hover:text-secondary-600">Meta Ads</a>
          <a href="/white-label.html" class="block rounded-xs px-4 py-2 text-sm/6 text-grey-700 hover:bg-grey-50 hover:text-secondary-600">White Label</a>
        </div>
      </div>

      <div class="group relative">
        <button class="flex items-center gap-1 text-base/6 font-medium text-primary-900 transition-colors hover:text-secondary-500">
          Learn
          <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
        </button>
        <div class="invisible absolute top-full left-0 w-48 z-50 translate-y-2 rounded-sm border border-grey-100 bg-white p-2 shadow-sm opacity-0 transition-all group-hover:visible group-hover:translate-y-0 group-hover:opacity-100">
         <a href="/case-studies.html" class="block rounded-xs px-4 py-2 text-sm/6 text-grey-700 hover:bg-grey-50 hover:text-secondary-600">Case Studies</a>
          <a href="https://www.youtube.com/@CreeksideMarketing1" class="block rounded-xs px-4 py-2 text-sm/6 text-grey-700 hover:bg-grey-50 hover:text-secondary-600">YouTube</a>
          <a href="https://www.linkedin.com/company/creekside-marketing/" class="block rounded-xs px-4 py-2 text-sm/6 text-grey-700 hover:bg-grey-50 hover:text-secondary-600">Linkedin</a>
        </div>
      </div>

      <div class="group relative">
        <button class="flex items-center gap-1 text-base/6 font-medium text-primary-900 transition-colors hover:text-secondary-500">
          About
          <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
        </button>
        <div class="invisible absolute top-full left-0 w-48  z-50 translate-y-2 rounded-sm border border-grey-100 bg-white p-2 shadow-sm opacity-0 transition-all group-hover:visible group-hover:translate-y-0 group-hover:opacity-100">
          <a href="/meet-the-team.html" class="block rounded-xs px-4 py-2 text-sm/6 text-grey-700 hover:bg-grey-50 hover:text-secondary-600">Meet The Team</a>
        </div>
      </div>

      <a href="/contact.html" class="text-base/6 font-medium text-primary-900 transition-colors hover:text-secondary-500">Contact</a>
    </nav>

    <div class="hidden lg:block">
      <a 
        href="https://calendly.com/creekside_marketing/strategy-call" 
        class="rounded-sm bg-secondary-500 px-6 py-3 text-sm font-bold text-white shadow-sm transition-all hover:bg-secondary-600 hover:shadow-md active:scale-95"
      >
        Get A Free Audit
      </a>
    </div>

    <button class="p-2 text-primary-900 lg:hidden" aria-label="Toggle Menu">
      <svg class="size-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
  </div>

  <script>
  document.addEventListener('DOMContentLoaded', () => {
    const dropdowns = document.querySelectorAll('.group.relative');

    dropdowns.forEach(dropdown => {
      const button = dropdown.querySelector('button');
      const menu = dropdown.querySelector('div');

      button.addEventListener('click', (e) => {
        // Prevent the click from immediately bubbling up to the window
        e.stopPropagation();

        const isOpen = !menu.classList.contains('invisible');

        // Close all other menus first for a clean UI
        closeAllMenus();

        if (!isOpen) {
          // Show the menu
          menu.classList.remove('invisible', 'opacity-0', 'translate-y-2');
          menu.classList.add('visible', 'opacity-100', 'translate-y-0');
        }
      });
    });

    // Close menus when clicking anywhere else on the screen
    window.addEventListener('click', () => {
      closeAllMenus();
    });

    function closeAllMenus() {
      dropdowns.forEach(dropdown => {
        const menu = dropdown.querySelector('div');
        menu.classList.add('invisible', 'opacity-0', 'translate-y-2');
        menu.classList.remove('visible', 'opacity-100', 'translate-y-0');
      });
    }
  });
</script>
</header>