---
// src/components/Testimonial.astro
interface Props {
  name: string;
  date: string;
  avatar?: string;
  quote: string;
  rating?: number; // 1 through 5
  platformLogo?: string;
  platformAlt?: string;
}

const { 
  name, 
  date, 
  avatar = `https://ui-avatars.com/api/?name=${name.replace(' ', '+')}&background=102a43&color=fff`, 
  quote, 
  rating = 5,
  platformLogo = "https://cdn.trustindex.io/assets/platform/Google/icon.svg",
  platformAlt = "Google"
} = Astro.props;
---

<div class="mb-8 rounded-sm border break-inside-avoid border-grey-100 bg-grey-50 p-8 shadow-sm">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <div class="size-12 overflow-hidden rounded-full bg-grey-200">
        <img src={avatar} alt={name} />
      </div>
      <div>
        <h4 class="font-bold text-primary-900 leading-tight">{name}</h4>
        <p class="text-xs text-grey-500 uppercase font-semibold tracking-wider">{date}</p>
      </div>
    </div>
    <img src={platformLogo} class="size-5 opacity-50" alt={platformAlt}>
  </div>
  
  <div class="mt-4 flex gap-0.5 text-secondary-500">
    {/* Generate stars based on the rating prop */}
    {Array.from({ length: rating }).map(() => (
      <svg class="size-4 fill-current" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
    ))}
  </div>

  <p class="mt-4 text-base/7 text-grey-700 italic">
    "{quote}"
  </p>
</div>